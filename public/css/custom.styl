[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak
  display: none !important

.navbar
  margin-bottom: 2rem
  
.jumbotron
  margin-top: -2rem

.navbar .form-inline
  input, button
    margin-left: 10px
    
.content .form-inline
  margin-bottom: 1rem
  select
    margin-left: 10px

footer
  border-top: 1px solid #343a40
  padding: 1rem
  margin-top: 1rem

.toast-top-right
  top: 4rem
  
.toast-success
  background-color: #0CB0E8
  
.error-message
  color: #dc3545
  
.ng-dirty.ng-invalid
  border-color: #dc3545
  &:focus
    border-color: #dc3545
    box-shadow: 0 0 0 0.2rem rgba(217,31,49,.25)
    
input[type='email'].ng-dirty.ng-invalid:focus
  border-color: #80bdff
  box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25)
  
pre
 white-space: pre-wrap       /* css-3 */
 white-space: -moz-pre-wrap  /* Mozilla, since 1999 */
 white-space: -pre-wrap      /* Opera 4-6 */
 white-space: -o-pre-wrap    /* Opera 7 */
 word-wrap:   break-word       /* Internet Explorer 5.5+ */

#course-title
  text-align: center
  margin-bottom: 2rem

#course-controls
  margin-bottom: 3rem
  
.lesson
  .card-footer
    display: flex
    justify-content: flex-end
    button
      min-width: 5rem
      margin-left: .5rem

@media (max-width: 767px)
  .navbar-collapse
    .form-inline
      input, button
        margin-left: 0
        margin-bottom: .5rem
