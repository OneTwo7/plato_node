.lesson
  .card-footer
    padding: .75rem 0

.lesson-footer
    display: flex
    justify-content: flex-end
    padding: .75rem 1.25rem 0 1.25rem
    margin-top: .75rem
    border-top: 1px solid rgba(0,0,0,.125)
    button
      min-width: 5rem
      margin-left: .5rem

.lesson-controls
  button
    margin-right: .5rem

.lessons-navigation
  text-align: center
  a
    display: inline-block
    min-width: 8rem

#toggle-lessons-tab-lists
  width: 100%
  display: flex
  justify-content: flex-end
  border-radius: .25rem
  margin: 0 15px
  .navbar-toggler
    margin-right: .5rem

#lessons-row
  position: relative

#lessons-tab-lists
  padding: 1rem 15px
  border-radius: .25rem
  background: #fff
  position: absolute
  top: 4rem
  z-index: 2
  display: none

#lessons-panes
  margin-top: 3rem

#course-controls
  margin-bottom: 2rem

@media (min-width: 768px)
  #toggle-lessons-tab-lists
    display: none
  #course-controls
    margin-bottom: 3rem
  #lessons-tab-lists
    padding: 0 15px
    background: none
    display: block
    position: relative
    top: 0
  #lessons-panes
    margin-top: 0
